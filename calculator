num1=int(input("Enter the first number: "))
num2=int(input("Enter the second number: "))

print("Choose an operation: ")
print("+ for addition.")
print("- for subtraction.")
print("* for multiplication.")
print("/ for division.")
operation=input("Enter the operation: ")

if operation =="+":
    result=num1+num2
    print("Result: ",result)
elif operation =="-":
    result=num1-num2
    print("Result: ",result)
elif operation =="*":
    result=num1*num2
    print("Result: ",result)
elif operation =="/":
    result=num1/num2
    print("Result: ",result)
else:
    print("Invalid choice.Please choose valid operation.")